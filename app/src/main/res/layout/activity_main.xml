<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activities.MainActivity">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content" >

		<EditText
			android:id="@+id/loginEmailEditText"
			android:layout_width="330dp"
			android:layout_height="41dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="107dp"
			android:layout_marginEnd="8dp"
			android:background="@drawable/my_edit_text"
			android:ems="10"
			android:hint="email"
			android:inputType="textEmailAddress"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/textView12" />

		<EditText
			android:id="@+id/loginPasswordEditText"
			android:layout_width="330dp"
			android:layout_height="41dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="32dp"
			android:layout_marginEnd="8dp"
			android:background="@drawable/my_edit_text"
			android:ems="10"
			android:hint="password"
			android:inputType="textPassword"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.496"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/loginEmailEditText" />

		<Button
			android:id="@+id/loginButton"
			android:layout_width="330dp"
			android:layout_height="41dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="32dp"
			android:layout_marginEnd="8dp"
			android:background="#000"
			android:onClick="login"
			android:text="Login"
			android:textColor="#fff"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.498"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/loginPasswordEditText" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="30dp"
		android:layout_marginEnd="8dp"
		android:onClick="resetPassword"
		android:text="Did you forget your password? Click here."
		android:textAlignment="center"
		android:textColor="@color/design_default_color_primary"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView3" />

	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="70dp"
		android:layout_marginEnd="8dp"
		android:onClick="registerNewUser"
		android:text="Are you a new user? Register here."
		android:textAlignment="center"
		android:textColor="@color/design_default_color_primary"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/loginButton" />

	<Button
		android:id="@+id/button"
		android:layout_width="112dp"
		android:layout_height="46dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="43dp"
		android:layout_marginEnd="8dp"
		android:onClick="navigation"
		android:text="navigation"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.498"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView" />

	<TextView
		android:id="@+id/textView12"
		android:layout_width="209dp"
		android:layout_height="37dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="76dp"
		android:layout_marginEnd="8dp"
		android:text="KEA BANK"
		android:textAlignment="center"
		android:textColor="#000"
		android:textSize="30sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	</android.support.constraint.ConstraintLayout>
</ScrollView>

